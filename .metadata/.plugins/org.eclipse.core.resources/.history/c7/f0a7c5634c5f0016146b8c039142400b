package com.tutorial.main;

public class Spawn {

	private Handler handler;
	private HUD hud;
	
	private int scoreKeep, level = 0;
	
	public Spawn(Handler handler, HUD hud){
		this.handler = handler;
		this.hud = hud;
	}
	
	public void tick(){
		if (scoreKeep >= 1000){
			scoreKeep = 0;
			hud.setLevel(hud.getLevel()+1);
		}
	}
	
}
